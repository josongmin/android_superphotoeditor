<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/actJoPickPhoto_rlContent"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/actJoPickPhoto_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp" android:layout_centerInParent="true"
                android:id="@+id/actJoPickPhoto_pbLoading"/>


        </RelativeLayout>


        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/actJoPickPhoto_rlTop"
            android:layout_width="match_parent"
            android:layout_height="44dp" >

            <!--<ImageView-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:id="@+id/actJoPickPhoto_ivbtnLeft"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_width="8dp"-->
            <!--android:layout_height="wrap_content" android:adjustViewBounds="true" android:src="@drawable/icon_leftarrow_black"/>-->


            <LinearLayout
                android:background="@color/colorAccent"

                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="6dp"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_circle_white"/>


                <TextView
                    android:scaleX="0.98"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="15dp" android:text="전체 사진 앨범"/>

                <!--fa418f-->
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" android:src="@drawable/icon_downarrow_black_white"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/actJoPickPhoto_llRight"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/actPhotoPicker_llbtnOk"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground">

                    <TextView
                        android:id="@+id/actJoPickPhoto_tvbtnLeft"
                        android:layout_marginRight="3dp"
                        android:scaleX="0.98"
                        android:gravity="center"
                        android:background="#c7c7c7"
                        android:paddingLeft="15dp" android:paddingRight="15dp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:textSize="14dp" android:text="취소"/>


                    <TextView
                        android:scaleX="0.98"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:paddingLeft="15dp" android:paddingRight="15dp"
                        android:textColor="#dd000000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:textSize="14dp" android:text="확인"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</io.codetail.widget.RevealFrameLayout>