<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemWorker_ivPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/itemWorker_tvName"/>

            <TextView
                android:text="address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/itemWorker_tvAddress"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#22000000"/>

</LinearLayout>
