<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:paddingLeft="15dp" android:paddingRight="15dp"
    >


    <LinearLayout
        android:paddingTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_marginRight="14dp"
            android:id="@+id/itemPhotoAlbum_ivPhoto"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            app:siSquare="true"
            app:siBorderColor="#03000000"
            app:siBorderWidth="0px"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

                <TextView
                    android:id="@+id/itemPhotoAlbum_tvName"
                    android:textColor="#dd000000"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="전체사진"/>

                <TextView
                    android:id="@+id/itemPhotoAlbum_tvCnt"
                    android:textColor="#77000000"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="사진개수는 1124개입니다."/>


            </LinearLayout>

            <ImageView
                android:id="@+id/itemPhotoAlbum_ivChk"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_check_off_gray"/>

        </RelativeLayout>


    </LinearLayout>





</LinearLayout>
